<h1>New Game</h1>

<%@letters.each do |letter| %>
<div class="letters"><%= letter %></div>
<% end %>

<form class="form" action="/score" method="POST">
  <h2>What is the longest Word you can find?</h2>
  <input type="text" name="word">
  <input type="submit">
  <input id="letters_list" name="letters_list" type="hidden" />
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters_list, @letters %>
</form>
